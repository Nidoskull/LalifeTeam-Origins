{
	"type": "origins:multiple",
	"callback": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:execute_command",
			"command": "team add skeleton"
		},
		"entity_action_removed": {
			"type": "origins:execute_command",
			"command": "team leave @s"
		}
	},
	"team": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:and",
			"actions": [{
				"type": "origins:execute_command",
				"command": "team join skeleton @s"
			}, {
				"type": "origins:execute_command",
				"command": "execute at @s as @e[distance=..64,type=#skeletons,tag=!aggressed] run team join skeleton @s"
			}]
		},
		"interval": 20
	},
	"aggress": {
		"type": "origins:target_action_on_hit",
		"entity_action": {
			"type": "origins:and",
			"actions": [{
				"type": "origins:execute_command",
				"command": "tag @s add aggressed"
			}, {
				"type": "origins:execute_command",
				"command": "team leave @s"
			}]
		},
		"target_condition": {
			"type": "origins:entity_type",
			"entity_type": "#skeletons"
		},
		"cooldown": 0,
		"hud_render": {
			"should_render": false
		}
	},
	"hidden": true
}