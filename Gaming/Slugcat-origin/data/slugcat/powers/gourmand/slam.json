{
	"name": "Ground Slam",
    "description": "Slam the ground with your body! (You need some food in your belly for this!)",
    "type": "origins:multiple",
    "go_down": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:add_velocity",
                    "space": "world",
                    "y": -1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "slugcat:gourmand_slam_on_ground",
                    "change": -1
                },
                {
                  "type": "origins:change_resource" ,
                  "resource": "slugcat:gourmand_slam_falling",
                  "change": 1
                }
            ]   
        },
        "hud_render": {
            "should_render": true
        },
        "key": {
          "key": "key.origins.secondary_active"
        },
        "cooldown": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [
            {
                "type": "origins:on_block",
                "inverted": true
            },
            {
                "type": "origins:food_level",
                "comparison": ">=",
                "compare_to": 8
            }
        ]
    }
    },
    "on_ground": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        },
        "max_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:spawn_particles",
                    "particle": {
                        "type": "minecraft:dust",
                        "params": "1 1 1 2"
                    },
                    "count": 16,
                    "speed": 0.0,
                    "force": false,
                    "spread": {
                        "x": 1.5,
                        "y": 0.0,
                        "z": 1.5
                    }
                },
                {
                    "type": "origins:area_of_effect",
                    "radius": 2,
                    "bientity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:damage",
                                    "amount": 4,
                                    "source": {
                                        "name": "generic.player"
                                    }
                                }
                            },
                            {
                                "type": "origins:add_velocity",
                                "y": 0.8,
                                "set": true,
                                "space": "world"
                            }
                        ]
                    }
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.bee.sting"
                }
            ]
        }
    },
    "touching_ground": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_on_ground",
            "change": 1
        },
        "condition": {
            "type": "origins:on_block"
        }
    },
    "touching_ground2": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_falling",
            "change": -1
        },
        "condition": {
            "type": "origins:on_block"
        }
    },
    "falling": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "max_action": {
            "type": "origins:grant_power",
            "power": "origins:fall_immunity",
            "source": "origins:feline"
        },
        "min_action": {
            "type":"origins:revoke_power",
            "power": "origins:fall_immunity",
            "source": "origins:feline"
        }
    }
}
