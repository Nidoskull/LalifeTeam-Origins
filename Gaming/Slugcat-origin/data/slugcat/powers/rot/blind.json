                    }
                },
                {
                    "type": "origins:target_condition",
                    "condition": {
                        "type": "origins:living"
                    }
                }
            ]
        },
        "use_teams": false,
        "red": 1.0,
        "green": 1.0,
        "blue": 1.0
    },
