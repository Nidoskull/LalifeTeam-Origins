{
    "name": "Needle Generation",
    "description": "You can generate the needles you feed with on your own.",
    "type": "origins:multiple",
    "meter": {
        "type": "origins:resource",
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 1
        },
        "min": 0,
        "max": 60,
        "max_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_meter",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:execute_command",
                    "command": "give @s stick{CustomModelData:7925002}"
                }
            ]
        }
    },
    "gen": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_meter",
                    "change": 1
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:crit ~ 1 ~ 0.5 0.5 0.5 0.0 4 normal @a"
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true,
            "inverted": true
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                "type": "origins:moving",
                "inverted": true
                }
            ]
        }
    },
    "down":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource":"*:*_meter",
            "change": -1
        },
        "interval": 2,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_gen",
            "inverted": true
        }
    }
}