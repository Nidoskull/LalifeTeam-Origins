{
    "name": "Pounce!",
    "description": "Hold shift and jump to jump REALLY far! (Your explosion does not explode things.)",
    "type": "origins:multiple",
    "storecharge": {
        "type": "origins:resource",
        "min": 0,
        "max": 60,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 1,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_storecharge",
                "comparison": ">=",
                "compare_to": "1"
            }
        }
    },
    "charge_up": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_storecharge",
                    "change": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:ash ~ ~ ~ 0.5 0.5 0.5 0.0 4 normal @a"
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.sneak",
            "continuous": true,
            "inverted": true
        },
        "condition": {
            "type": "origins:on_block"
        },
        "hidden": true
    },
    "charge_down": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_storecharge",
            "change": -1
        },
        "interval": 1,
        "condition": {
            "type": "origins:sneaking",
            "inverted": true
        }
    },
    "jump": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:add_velocity",
                    "y": 1,
                    "z": 2,
                    "space": "local_horizontal_normalized",
                    "client": true,
                    "server": true
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_storecharge",
                    "change": -60
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:explosion ~ ~ ~ 0.5 0.5 0.5 0.0 4 normal @a"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.generic.explode player @a ~ ~ ~ 1 1.3"
                }

            ]
        },
        "key": {
            "key": "key.jump"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_storecharge",
            "comparison": ">",
            "compare_to": 55
        }
    }
}