{
  "type": "origins:multiple",
  "name": "Nimble",
  "description": "You can climb up a few blocks. You can stay on poles for as long as you'd like.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Poles are defined by the 'poles' block tag, which contains all fences, walls (blocks), trapdoors, and climbable-tagged blocks. Additionally, Iron Bars, End Rods and Chains are considered poles."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Made by eggohito. Modified from the Power Library."
        }
    ],
  "climbed_blocks": {
    "type": "origins:resource",
    "min": 0,
    "max": 24,
    "hud_render": {
      "should_render": true,
      "inverted": true,
      "condition": {
        "type": "origins:resource",
        "compare_to": 0,
        "comparison": "==",
        "inverted": true,
        "resource": "*:*_climbed_blocks"
      },
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 8
    }
  },
  "climbing": {
    "type": "origins:climbing",
    "allow_holding": false,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:collided_horizontally"
        },
        {
          "type": "origins:resource",
          "resource": "*:*_climbed_blocks",
          "comparison": "<=",
          "compare_to": 23
        }
      ]
    }
  },
  "start": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_climbed_blocks",
      "change": 1
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:block_collision",
              "offset_x": 0.1,
              "offset_y": 0,
              "offset_z": 0.1
            },
            {
              "type": "origins:block_collision",
              "offset_x": -0.1,
              "offset_y": 0,
              "offset_z": -0.1
            }
          ]
        },
        {
          "type": "origins:fall_distance",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:on_block",
          "inverted": true
        }
      ]
    }
  },
  "end": {
    "type": "origins:action_over_time",
    "interval": 4,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_climbed_blocks",
      "change": -1
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_climbed_blocks",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "origins:on_block"
        }
      ]
    }
  },
  "poles": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_climbed_blocks",
      "change": -2
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_climbed_blocks",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "origins:in_block",
          "block_condition": {
            "type": "origins:in_tag",
            "tag": "slugcat:poles"
          }
        }
      ]
    }
  }
}